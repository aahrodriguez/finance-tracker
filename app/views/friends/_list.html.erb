<div class="row mt-3">
    <div class="col-9">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">First name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @my_friends.each do |friend| %>
            <tr>
              <th scope="row"><%= friend.first_name %></th>
              <th scope="row"><%= friend.last_name %></th>
              <th scope="row"><%= friend.email %></th>
              <td><%= link_to "Stop Following", friendships_path(friend), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger btn-sm" %>
                <%= link_to("View profile", user_path(friend), class: "btn btn-success btn-sm") %>

              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
